" completion modes
set wildmode=full
" show menu if there are multiple matches
set wildmenu

" ignore files with these suffixes on auto completion,
" lower precedence when hitting 'wildchar' twice
set suffixes+=.log
set suffixes+=*.dvi
set suffixes+=*.pdf
set suffixes+=*.bin

" completely ignore files with these suffixes
" vim
set wildignore+=*.swp

" emacs
set wildignore+=~*

" vim: ft=vim
