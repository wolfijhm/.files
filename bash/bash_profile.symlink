export DOTFILES=$HOME/.files

export BASH_PROFILE_SOURCED="true"

# update PATH
for bin_dir in $DOTFILES/*/bin
do
  export PATH=$PATH:"$bin_dir"
done

# source every env file
for env_conf in $DOTFILES/*/env.conf
do
  source $env_conf
done

# source local env
[[ -e ~/.localenv ]] && source ~/.localenv

# source bashrc
[[ -e ~/.bashrc ]] && source ~/.bashrc

