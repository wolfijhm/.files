# check for double-initialization:
# some zsh configuration source the bash_profile
if [[ -z $BASH_PROFILE_SOURCED ]]; then
  export DOTFILES=$HOME/.files

  # update path
  for bin_dir ($DOTFILES/*/bin(/)) export PATH="$bin_dir":$PATH

  # source every env file
  for env_conf ($DOTFILES/**/env.conf) source $env_conf

  # source local env
  if [[ -e ~/.localenv ]] source ~/.localenv
fi
